<!DOCTYPE html>
<html>
  <head>
    <title>Harrys Workspace</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, minimum-scale=1, maximum-scale=1" >
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%# <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"> %>
    <link href='https://fonts.googleapis.com/css?family=Acme' rel='stylesheet' type='text/css'>
  </head>

  <body>
      <% if notice %>
       <p class="alert alert-success animation-forwards" onanimationend="reverseAnimation(this)"><%= notice %></p>
      <% end %>
      <% if alert %>
        <p class="alert alert-danger animation-forwards" onanimationend="reverseAnimation(this)"><%= alert %></p>
      <% end %>
      <%= yield %>
  </body>
</html>
