<%= stylesheet_link_tag 'articles', media: 'all', 'data-turbolinks-track': 'reload'%>
<%# 所以只要那個resource.scss裡面import shared，之後都可以在resource.scss上面做更改局部css即可！ %>
<div id="articles-container">
  <% @articles.each do |article| %>
    <a id="article-block-<%=article.id%>" class="article-block" href="<%= article_path(article.id)%>">
      <div class="author"><%= article.user.email.split('@')[0] %></div>
      <div class="wrap-title"><h3 id="article_<%= article.id%>"><%= article.title %></h3><span class="created-at"><%= readable_time(article.created_at) %></span></div>
      <p class="content"><%= article.trimmed_content %></p>
      <div class="wrap-summary">
      <span class="like-count">&#x1f44d; <%= article.like_count %></span>
      <span class="comment-count">&#x1f4ac; <%= article.comment_count %></span>
      <span class="view-count">&#x1f441; <%= article.view_count %></span>
      </div>
    </a>
  <% end %>
</div>