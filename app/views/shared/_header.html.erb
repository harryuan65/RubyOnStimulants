<div id="container-top">
      <div class="txt" id="titles">
          <span id="title"><%= link_to "Our Workspace",root_path %></span>
          <% if subtitle!="" %>
            <span id="subtitle"> <%= subtitle %> </span>
          <% end %>
      </div>
    <%if subtitle!=""%>
      <div id="wrap-user-status">
          <span id="current-username">
             <% if current_user %>
               <%= current_user.email.split('@')[0] %>
             <% else %>
               <script>
               window.location = "users/sign_in"
               </script>
             <% end %>
          </span>

         <%= link_to "Logout",destroy_user_session_path,method:"delete",data:{confirm:"真der要登出嗎？😭"},class:"btn-logout" %>
      </div>

    <% end %>

</div>

