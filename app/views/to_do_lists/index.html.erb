<%= javascript_include_tag 'datetime' %>
<div class="container list-page">
  <section class="todolist">
    <h1 class="block-title font text-t3">To-Do Lists <%= @category.present?? ": #{@category}" : "" %></h2>
    <hr class="block-hr">
    <div class="section-content-container">
      <%= render "list" %>
    </div>

  <!-- This will ask for js response-->
  <%= link_to svg_asset("refresh"), to_do_lists_path, remote: true, id: "back-to-todolist", class: "btn font text-t7 back-to-todolist" %>
</div>