<%= stylesheet_link_tag 'articles', media: 'all', 'data-turbolinks-track': 'reload'%>
<%# 所以只要那個resource.scss裡面import shared，之後都可以在resource.scss上面做更改局部css即可！ %>
<div id="container">
  <% unless @category.present? %>
    <p class="welcome-txt text-dk notosans-light">Welcome to TechPod! Here you can find some tech notes and<br/> some tools created by Harry, who is a small web developer.</p>
  <% end %>
  <section class="articles">
    <h2 class="section-h2 notosans-light text-7e">Articles <%= @category.present?? ": #{@category}" : "" %></h2>
    <hr class="section-hr">
    <div class="section-content-container">
    <% if @articles.empty? %>
      <h2 class="notosans text-dk"><%= t('controller.articles.empty') %></h2>
    <% end %>
      <% @articles.each do |article| %>
        <div class="article-container" id="article-<%=article.id%>">
          <a href="<%= article_path(article.id)%>" class="article-link">
            <div class="wrap-article-title">
              <h3 class="article-title notosans-bold"><%= article.title %></h3>
              <% case article.state %>
              <% when "draft"%>
                <%= article.draft?? '<span class="draft notosans-light text-dk">draft</span>'.html_safe : "" %>
              <% when "not_public"%>
                <%= article.not_public?? '<span class="private notosans-light text-dk">private</span>'.html_safe : "" %>
              <% end %>
            </div>
            <!-- <span class="article-description subtitle notosans-light text-dk"><%= article.subtitle %></span>-->
            <div class="wrap-tags">
              <% article.tag_names.each_with_index do |tag, i| %>
                  <span class="article-description tag notosans-light text-dk"><%= tag %></span>
                <% if i!=article.tag_names.size-1 %>
                  <span class="notosans-light text-dk">,</span>
                <% end %>
              <% end %>
            </div>
          </a>
          <span class="article-author notosans-light text-dk"><%= username(article.user) %></span>
          <span class="article-created-at notosans-light text-dk"><%= article.created_at.strftime("%B") %> <%= article.created_at.day %></span>
        </div>
      <% end %>
    </div>
  </section>
</div>